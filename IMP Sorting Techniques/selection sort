class Solution {
  public:
    // Function to perform selection sort on the given array.
    void selectionSort(vector<int> &arr) {
        // code here
        int n = arr.size();
        int min_indx;
        
        for(int i=0; i<n;i++){
            min_indx = i;
            for(int j=i+1;j<n;j++){
                if(arr[i] > arr[j]){
                    swap(arr[i], arr[j]);
                }
            }
        }
    }
};
